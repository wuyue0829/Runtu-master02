<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/ll_top_filter"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/white">
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/relativeLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:gravity="center_vertical"
                android:padding="20dp">
                <ImageView
                    android:id="@+id/ImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:src="@mipmap/logo"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:paddingTop="10dp"
                    android:text="@string/runtu_mall"
                    android:textColor="#c90101"
                    android:textSize="20dp"/>
            </RelativeLayout>
            <LinearLayout
                android:id="@+id/linearLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relativeLayout1"
                android:background="#ffffff"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:text="@string/region_choice"
                    android:textSize="20dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="10dp">
                    <TextView
                        android:id="@+id/tv_province"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/region_bg"
                        android:gravity="center"
                        android:text="陕西省"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:src="@drawable/region_line"/>
                    <TextView
                        android:id="@+id/tv_city"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/region_bg"
                        android:gravity="center"
                        android:text="延安市"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:src="@drawable/region_line"/>
                    <TextView
                        android:id="@+id/tv_area"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/region_bg"
                        android:gravity="center"
                        android:text=""/>

                </LinearLayout>
            </LinearLayout>
            <View
                style="@style/specialtyBottomLineStyle"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@color/gary_specialty_filter_bg"/>

            <View
                style="@style/specialtyBottomLineStyle"/>


            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:orientation="horizontal">

                <LinearLayout android:layout_width="100dp"
                              android:layout_height="match_parent"
                              android:background="#fff"
                              android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_shuiguo"
                        style="@style/SpecialtyFilterTextVeiwStyle"
                        android:text="@string/fruit_dried_fruit"/>
                    <View
                        style="@style/specialtyBottomLineStyle"/>
                    <TextView

                        android:id="@+id/tv_qingdanrounai"
                        style="@style/SpecialtyFilterTextVeiwStyle"
                        android:text="@string/poultry_egg_milk"/>
                    <View
                        style="@style/specialtyBottomLineStyle"/>
                    <TextView

                        android:id="@+id/tv_shucaishipin"
                        style="@style/SpecialtyFilterTextVeiwStyle"
                        android:text="@string/vegetable_food"/>
                    <View
                        style="@style/specialtyBottomLineStyle"/>

                    <TextView android:id="@+id/tv_shougongyipin"
                              style="@style/SpecialtyFilterTextVeiwStyle"
                              android:text="@string/handicraft"/>
                    <View
                        style="@style/specialtyBottomLineStyle"/>
                    <TextView android:id="@+id/tv_shanyeganhuo"
                              style="@style/SpecialtyFilterTextVeiwStyle"
                              android:text="@string/shanyeganhuo"/>
                    <View
                        style="@style/specialtyBottomLineStyle"/>
                    <TextView android:id="@+id/tv_other"
                              style="@style/SpecialtyFilterTextVeiwStyle"
                              android:text="@string/other"
                    />
                    <View
                        style="@style/specialtyBottomLineStyle"/>

                </LinearLayout>

                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="match_parent"
                              android:background="@color/gary_specialty_filter_bg"
                              android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_fenlei_name"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/specialty_filter_text_height"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:text="水果干果"
                        android:textColor="@color/red"/>
                    <com.mac.runtu.view.SpecialtyFilterGridView
                        android:id="@+id/gv_fenlei"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:horizontalSpacing="3dp"
                        android:numColumns="3"
                        android:padding="10dp"
                        android:verticalSpacing="3dp"></com.mac.runtu.view.SpecialtyFilterGridView>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <View
        style="@style/AddressBottomLineStyle"/>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="40dp"
                  android:background="@color/white"
                  android:orientation="horizontal">

        <TextView android:id="@+id/tv_again"
                  android:layout_width="0dp"
                  android:layout_height="match_parent"
                  android:layout_weight="1"
                  android:background="@drawable/btn_grag_red_selector"
                  android:clickable="true"
                  android:gravity="center"
                  android:text="重置"
                  android:textColor="@color/btn_text_selector"
                  android:textSize="16sp"/>

        <View
            style="@style/AddressSpaceLineStyle"/>

        <TextView android:id="@+id/tv_confirm"
                  android:layout_width="0dp"
                  android:layout_height="match_parent"
                  android:layout_weight="1"
                  android:background="@drawable/btn_grag_red_selector"
                  android:clickable="true"
                  android:gravity="center"
                  android:text="确定选择"
                  android:textColor="@color/btn_text_selector"
                  android:textSize="16sp"/>

    </LinearLayout>


</LinearLayout>