<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingTop="8dp"
    android:weightSum="2">

    <TextView
        android:id="@+id/tv_top_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/shape_just_bottom_line_business_dynamics_select_bg"
        android:gravity="left"
        android:paddingLeft="20dp"
        android:text="@string/tour_addres"
        android:textColor="@color/titlebg"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/shape_just_bottom_line_business_dynamics_normal_bg"
        android:gravity="center"/>

</LinearLayout>