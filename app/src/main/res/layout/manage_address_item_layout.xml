<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:padding="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/consignee_Tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="吴江"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/phone_num_Tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_gravity="right"
                android:text="15686036075"
                android:textSize="20sp"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/address_Tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:layout_marginTop="5dp"
            android:text="陕西省西安市高新区高新路31号凯创国际A座808室"
            android:textSize="16sp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/address_Tv"
            android:layout_marginTop="10dp"
            android:background="#B7B7B7"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@android:color/white">

            <RadioButton
                android:id="@+id/set_default_addtess_Rb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:textColor="@color/gary_text"
                android:text="@string/set_as_default_address"
            />


            <TextView
                android:id="@+id/delete_Tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="5dp"
                android:drawableLeft="@drawable/location"
                android:drawablePadding="5dp"
                android:text="@string/delete"/>

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>