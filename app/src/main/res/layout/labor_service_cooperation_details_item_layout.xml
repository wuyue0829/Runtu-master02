<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:textColor="@android:color/black"
        android:text="求购洛川苹果10吨，75以上，进村收购。" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/lsc_release_time_msg_Tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="@string/lsc_release_details_time" />

        <TextView
            android:id="@+id/lsc_release_time_Tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/lsc_release_time_msg_Tv"
            android:textSize="12sp"
            android:text="2016-09-12" />


        <TextView
            android:id="@+id/lsc_release_person_msg_Tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/lsc_release_time_Tv"
            android:layout_marginLeft="20dp"
            android:textSize="12sp"
            android:text="@string/lsc_release_details_person" />


        <TextView
            android:id="@+id/lsc_release_person_Tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/lsc_release_person_msg_Tv"
            android:layout_toRightOf="@+id/lsc_release_person_msg_Tv"
            android:textSize="12sp"
            android:text="刘先生" />


    </RelativeLayout>
</LinearLayout>