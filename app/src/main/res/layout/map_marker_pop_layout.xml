    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <ImageView
            android:id="@+id/icon_Iv"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            android:src="@drawable/maker_icon" />

        <TextView
            android:id="@+id/title_Tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/icon_Iv"
            android:layout_marginLeft="10dp"
            android:lines="1"
            android:textColor="@color/labor_service_pop_title_bg"
            android:text="找10个人套苹果袋" />

        <TextView
            android:id="@+id/address_msg_Tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/icon_Iv"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/title_Tv"
            android:text="@string/lsc_release_pop_address" />



        <TextView
            android:id="@+id/address_Tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:layout_toRightOf="@+id/address_msg_Tv"
            android:layout_below="@+id/title_Tv"
            android:text="延安-洛川-凤栖-马家河" />


        <TextView
            android:id="@+id/titile_msg_Tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/icon_Iv"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/address_Tv"
            android:text="@string/lsc_release_pop_time" />



        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/titile_msg_Tv"
            android:layout_below="@+id/address_Tv"
            android:lines="1"
            android:text="2016-09-12 上午" />

    </RelativeLayout>

</LinearLayout>