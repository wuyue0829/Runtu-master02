<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#ffffff"
              android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ff9900"
        android:orientation="horizontal"
        android:padding="5dp">

        <ImageView
            android:id="@+id/back_Iv"
            style="@style/BackImageStyle"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/logistics_information"
            android:textColor="@android:color/white"
            android:textSize="20sp"/>



    </RelativeLayout>
    <ScrollView android:layout_width="match_parent"
                android:layout_height="wrap_content">


        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical">


            <TextView
                android:id="@+id/text1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relativeLayout1"
                android:background="@color/contentbg"
                android:gravity="center_horizontal"
                android:padding="10dp"
                android:text="@string/choice_release_vehicle_information"/>
            <ScrollView
                android:id="@+id/scrollview"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@android:color/white">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:id="@+id/linearLayout1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/text1"
                        android:layout_gravity="center_vertical"
                        android:background="#ffffff"
                        android:orientation="horizontal"
                        android:padding="10dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left|center_vertical"
                            android:layout_weight="1"
                            android:background="@null"
                            android:drawableLeft="@drawable/release_red_dot"
                            android:drawablePadding="10dp"
                            android:paddingLeft="20dp"
                            android:text="@string/vehicle_type"/>

                        <Spinner
                            android:id="@+id/sp_type1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_marginRight="20dp"/>


                    </LinearLayout>
                    <View
                        android:id="@+id/line1"
                        style="@style/ReleaseSpaceLineStyle"
                        android:layout_below="@+id/linearLayout1"
                    />
                    <LinearLayout
                        android:id="@+id/linearLayout2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/line1"
                        android:background="#ffffff"
                        android:orientation="vertical"
                        android:padding="10dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left|center_vertical"
                            android:layout_weight="1"
                            android:background="@null"
                            android:drawableLeft="@drawable/release_red_dot"
                            android:drawablePadding="10dp"
                            android:paddingLeft="20dp"
                            android:text="@string/load_weight"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:paddingRight="20dp"
                            android:paddingTop="5dp">
                            <EditText
                                android:id="@+id/et_weight"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@null"
                                android:digits="0123456789."
                                android:gravity="right"
                                android:hint="@string/input_load_weight"
                                android:maxLength="6"
                                android:paddingRight="20dp"
                                android:textSize="15dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:text="@string/ton"/>
                        </LinearLayout>

                    </LinearLayout>
                    <View
                        android:id="@+id/line2"
                        style="@style/ReleaseSpaceLineStyle"
                        android:layout_below="@+id/linearLayout2"
                    />
                    <LinearLayout
                        android:id="@+id/linearLayout3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/line2"
                        android:background="#ffffff"
                        android:orientation="vertical"
                        android:padding="10dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left|center_vertical"
                            android:layout_weight="1"
                            android:background="@null"
                            android:drawableLeft="@drawable/release_red_dot"
                            android:drawablePadding="10dp"
                            android:paddingLeft="20dp"
                            android:text="@string/originating_place"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:paddingTop="5dp"

                        >
                            <Spinner
                                android:id="@+id/sp_prov"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"/>
                            <Spinner
                                android:id="@+id/sp_city"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"/>
                            <Spinner
                                android:id="@+id/sp_area"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"/>
                            <Spinner
                                android:id="@+id/sp_town"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:visibility="gone"/>
                        </LinearLayout>

                    </LinearLayout>
                    <View
                        android:id="@+id/line3"
                        style="@style/ReleaseSpaceLineStyle"
                        android:layout_below="@+id/linearLayout3"
                    />
                    <LinearLayout
                        android:id="@+id/linearLayout4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/line3"
                        android:background="#ffffff"
                        android:orientation="vertical"
                        android:padding="10dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left|center_vertical"
                            android:layout_weight="1"
                            android:background="@null"
                            android:drawableLeft="@drawable/release_red_dot"
                            android:drawablePadding="10dp"
                            android:paddingLeft="20dp"
                            android:text="@string/destination"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:paddingTop="5dp"
                        >
                            <Spinner
                                android:id="@+id/sp_final_prov"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"/>
                            <Spinner
                                android:id="@+id/sp_final_city"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"/>
                            <Spinner
                                android:id="@+id/sp_final_area"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"/>
                            <Spinner
                                android:id="@+id/sp_final_town"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                 android:layout_weight="1"
                                android:visibility="gone"/>
                        </LinearLayout>

                    </LinearLayout>
                    <View
                        android:id="@+id/line4"
                        style="@style/ReleaseSpaceLineStyle"
                        android:layout_below="@+id/linearLayout4"
                    />
                    <LinearLayout
                        android:id="@+id/linearLayout5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/line4"
                        android:background="#ffffff"
                        android:orientation="vertical"
                        android:padding="10dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left|center_vertical"
                            android:layout_weight="1"
                            android:background="@null"
                            android:drawableLeft="@drawable/release_red_dot"
                            android:drawablePadding="10dp"
                            android:paddingLeft="20dp"
                            android:text="@string/pathway"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:paddingTop="5dp"

                        >
                            <EditText
                                android:id="@+id/et_address01"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="10dp"
                                android:layout_weight="1"
                                android:textSize="12sp"
                                android:background="@drawable/pathway_bg"
                                android:lines="1"/>
                            <EditText
                                android:id="@+id/et_address02"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="10dp"
                                android:layout_weight="1"
                                android:textSize="12sp"
                                android:background="@drawable/pathway_bg"
                                android:lines="1"/>
                            <EditText
                                android:id="@+id/et_address03"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="10dp"
                                android:layout_weight="1"
                                android:background="@drawable/pathway_bg"
                                android:lines="1"/>
                            <EditText
                                android:id="@+id/et_address04"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="10dp"
                                android:layout_weight="1"
                                android:textSize="12sp"
                                android:background="@drawable/pathway_bg"
                                android:lines="1"/>
                            <EditText
                                android:id="@+id/et_address05"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="10dp"
                                android:layout_weight="1"
                                android:textSize="12sp"
                                android:background="@drawable/pathway_bg"
                                android:lines="1"/>

                        </LinearLayout>

                    </LinearLayout>
                    <View
                        android:id="@+id/line5"
                        style="@style/ReleaseSpaceLineStyle"
                        android:layout_below="@+id/linearLayout5"
                    />
                    <LinearLayout
                        android:id="@+id/linearLayout6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/line5"
                        android:background="#ffffff"
                        android:orientation="horizontal"
                        android:padding="10dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left|center_vertical"
                            android:layout_weight="1"
                            android:background="@null"
                            android:drawableLeft="@drawable/release_red_dot"
                            android:drawablePadding="10dp"
                            android:paddingLeft="20dp"
                            android:text="@string/departure_data"/>

                        <TextView
                            android:id="@+id/tv_start_car_data"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="20dp"
                            android:gravity="right"
                            android:hint="日期"
                            android:textSize="15dp"
                        />


                    </LinearLayout>
                    <View
                        android:id="@+id/line6"
                        style="@style/ReleaseSpaceLineStyle"
                        android:layout_below="@+id/linearLayout6"
                    />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/line5"
                        android:background="#ffffff"
                        android:orientation="horizontal"
                        android:padding="10dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left|center_vertical"
                            android:layout_weight="1"
                            android:background="@null"
                            android:drawableLeft="@drawable/release_red_dot"
                            android:drawablePadding="10dp"
                            android:paddingLeft="20dp"
                            android:text="@string/departure_time"/>

                        <TextView
                            android:id="@+id/tv_start_car_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="20dp"
                            android:gravity="right"
                            android:hint="时间"
                            android:textSize="15dp"
                        />


                    </LinearLayout>
                    <View

                        style="@style/ReleaseSpaceLineStyle"
                        android:layout_below="@+id/linearLayout6"
                    />
                    <LinearLayout
                        android:id="@+id/linearLayout7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/line6"
                        android:background="#ffffff"
                        android:orientation="horizontal"
                        android:padding="10dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left|center_vertical"
                            android:layout_weight="1"
                            android:background="@null"
                            android:drawableLeft="@drawable/release_red_dot"
                            android:drawablePadding="10dp"
                            android:paddingLeft="20dp"
                            android:text="@string/title"/>
                        <EditText
                            android:id="@+id/et_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:gravity="right"
                            android:hint="@string/input_title"
                            android:maxLength="14"
                            android:inputType="text"
                            android:paddingRight="20dp"
                            android:textSize="15dp"/>

                    </LinearLayout>
                    <View
                        android:id="@+id/line7"
                        style="@style/ReleaseSpaceLineStyle"
                        android:layout_below="@+id/linearLayout7"
                    />
                    <LinearLayout
                        android:id="@+id/linearLayout8"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/line7"
                        android:background="#ffffff"
                        android:orientation="vertical"
                        android:padding="10dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left|center_vertical"
                            android:layout_weight="1"
                            android:background="@null"
                            android:drawableLeft="@drawable/release_red_dot"
                            android:drawablePadding="10dp"
                            android:paddingLeft="20dp"
                            android:text="@string/detailed_description"/>
                        <EditText
                            android:id="@+id/et_des"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:gravity="start"
                            android:hint="@string/input_detailed_description"
                            android:lines="3"
                            android:paddingLeft="30dp"
                            android:paddingTop="5dp"
                            android:maxLength="60"
                            android:textSize="15dp"/>

                    </LinearLayout>
                    <View
                        android:id="@+id/line8"
                        style="@style/ReleaseSpaceLineStyle"
                        android:layout_below="@+id/linearLayout8"
                    />
                </LinearLayout>
            </ScrollView>

            <ImageView
                android:id="@+id/next_Iv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_below="@+id/scrollview"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:background="@color/white"
                android:src="@drawable/release_next_step"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>