<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/contentbg"
              android:orientation="vertical"
              tools:context=".activity.personcentre.OrderActivity">

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ff9900"
        android:orientation="horizontal"
        android:padding="5dp">

        <ImageView
            android:id="@+id/back_Iv"
            style="@style/BackImageStyle"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/order_details"
            android:textColor="@android:color/white"
            android:textSize="20sp"/>


        <ImageView
            android:id="@+id/iv_scan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:scaleType="centerInside"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/image_scan_02"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_serach"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="10dp"
        android:background="@drawable/order_seach_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone"
        android:padding="5dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/order_seach_icon"/>

        <TextView
            android:id="@+id/search_Tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@null"
            android:focusable="false"
            android:hint="@string/order_seach_hint"
            android:textSize="14sp"/>

    </LinearLayout>

    <View
        style="@style/TabTopStyle"
    />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/order_all_Tv"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/bg_white_yellow_selectop"
            android:text="@string/all_orders"/>

        <View
            style="@style/TabSpaceStyle"/>
        <TextView
            android:id="@+id/pending_payment_order_Tv"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/bg_white_yellow_selectop"
            android:text="@string/pending_payment_order"/>


        <View
            style="@style/TabSpaceStyle"/>
        <TextView
            android:id="@+id/tv_wait_set_good"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/bg_white_yellow_selectop"
            android:text="@string/wait_set_good"/>
        <View
            style="@style/TabSpaceStyle"/>

        <TextView
            android:id="@+id/receipt_of_goods_order_Tv"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/bg_white_yellow_selectop"
            android:text="@string/receipt_of_goods_order"/>

        <View
            style="@style/TabSpaceStyle"/>
        <TextView
            android:id="@+id/completed_order_Tv"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/bg_white_yellow_selectop"
            android:text="@string/completed_order"/>

    </LinearLayout>

    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content">

        <View
            style="@style/TabTopStyle"
        />
        <View
            android:id="@+id/view_indictor"
            android:layout_width="200dp"
            android:layout_height="3dp"
            android:background="@color/indictor_color"
        />

    </RelativeLayout>
    <!--指示器-->

     <FrameLayout
         android:id="@+id/fl_order_content"
         android:layout_width="match_parent"
                  android:layout_height="match_parent">

     </FrameLayout>

</LinearLayout>
