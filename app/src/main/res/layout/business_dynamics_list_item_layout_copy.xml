<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:src="@mipmap/logostr" />

    <TextView
        android:id="@+id/title_Tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:lines="1"
        android:layout_toRightOf="@+id/imageView"
        android:text="求购洛川苹果10顿，75以上，全红。"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/address_Tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_Tv"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/imageView"
        android:background="@drawable/business_dynamics_address_bg"
        android:text="洛川"
        android:textColor="@color/business_dynamics_address_color"
        android:textSize="12sp" />


    <TextView
        android:id="@+id/type_Tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_Tv"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/address_Tv"
        android:background="@drawable/business_dynamics_type_bg"
        android:text="富士"
        android:textColor="@color/business_dynamics_type_color"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/conent_Tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/address_Tv"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:lines="2"
        android:layout_toRightOf="@+id/imageView"
        android:text="求购洛川苹果10顿，75以上，进村收购，需要人装箱及装卸，价格面议。" />


    <TextView
        android:id="@+id/time_Tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/conent_Tv"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/imageView"
        android:drawableLeft="@drawable/time_icon"
        android:drawablePadding="5dp"
        android:text="2016-09-12" />


    <TextView
        android:id="@+id/localtion_Tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/conent_Tv"
        android:layout_marginTop="5dp"
        android:drawableLeft="@drawable/location_icon"
        android:drawablePadding="5dp"
        android:text="陕西/延安/洛川" />

</RelativeLayout>