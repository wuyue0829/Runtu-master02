<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_city"
            android:layout_width="0dp"
            android:layout_height="@dimen/address_text_height"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/address_select_text"
            />

        <ImageView
            android:id="@+id/iv_city"
            style="@style/AddressArrowShapeStyle"
        />
        <View
            style="@style/AddressSpaceLineStyle"/>
        <TextView
            android:id="@+id/tv_area"
            android:layout_width="0dp"
            android:layout_height="@dimen/address_text_height"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/address_select_text"
        />

        <ImageView
            android:id="@+id/iv_area"
            style="@style/AddressArrowShapeStyle"
        />
        <View
            style="@style/AddressSpaceLineStyle"/>
        <TextView
            android:id="@+id/tv_town"
            android:layout_width="0dp"
            android:layout_height="@dimen/address_text_height"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/address_select_text"
        />

        <ImageView
            android:id="@+id/iv_town"
            style="@style/AddressArrowShapeStyle"
        />
        <View
            style="@style/AddressSpaceLineStyle"/>
        <TextView
            android:id="@+id/tv_village"
            android:layout_width="0dp"
            android:layout_height="@dimen/address_text_height"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/address_select_text"
        />

        <ImageView
            android:id="@+id/iv_village"
            style="@style/AddressArrowShapeStyle"
        />


    </LinearLayout>

    <View
        style="@style/AddressBottomLineStyle"/>
</LinearLayout>