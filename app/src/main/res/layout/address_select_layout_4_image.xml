<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="3.5dp"
    >

        <TextView
            android:id="@+id/tv_city"
            android:layout_width="0dp"
            android:layout_height="@dimen/address_text_height"
            android:layout_weight="1"
            android:gravity="center"
            android:lines="1"
            android:textSize="@dimen/address_select_text"/>

        <ImageView
            android:id="@+id/iv_city"
            android:layout_width="@dimen/address_image_arrow"
            android:layout_height="@dimen/address_text_height"
            android:src="@drawable/down_arrow"
        />
        <View
            style="@style/AddressSpaceLineStyle"/>
        <TextView
            android:id="@+id/tv_area"
            android:layout_width="0dp"
            android:layout_height="@dimen/address_text_height"
            android:layout_weight="1"
            android:gravity="center"
            android:lines="1"
            android:textSize="@dimen/address_select_text"
        />

        <ImageView
            android:id="@+id/iv_area"
            android:layout_width="@dimen/address_image_arrow"
            android:layout_height="@dimen/address_text_height"
            android:src="@drawable/down_arrow"
        />
        <View
            style="@style/AddressSpaceLineStyle"/>
        <TextView
            android:id="@+id/tv_town"
            android:layout_width="0dp"
            android:layout_height="@dimen/address_text_height"
            android:layout_weight="1"
            android:gravity="center"
            android:lines="1"
            android:textSize="@dimen/address_select_text"
        />

        <ImageView
            android:id="@+id/iv_town"
            android:layout_width="@dimen/address_image_arrow"
            android:layout_height="@dimen/address_text_height"
            android:src="@drawable/down_arrow"
        />
        <View
            style="@style/AddressSpaceLineStyle"/>
        <TextView
            android:id="@+id/tv_village"
            android:layout_width="0dp"
            android:layout_height="@dimen/address_text_height"
            android:layout_weight="1"
            android:gravity="center"
            android:lines="1"
            android:textSize="@dimen/address_select_text"
            android:visibility="gone"
        />

        <ImageView
            android:id="@+id/iv_village"
            android:layout_width="@dimen/address_image_arrow"
            android:layout_height="@dimen/address_text_height"
            android:src="@drawable/down_arrow"
            android:visibility="gone"
        />

        <View
            style="@style/AddressSpaceLineStyle"/>

        <ImageView
            android:id="@+id/confirm_Iv"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="1"
            android:src="@drawable/business_dynamiscs_submit"/>

    </LinearLayout>

    <View
        style="@style/AddressBottomLineStyle"/>
</LinearLayout>